{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "allowJs": false,
    "jsx": "react-jsx",
    "rootDirs": ["./src", "./packages"],
    "removeComments": true,
    "noEmit": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*",
    "./packages/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}